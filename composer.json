{
  "name": "jlab/laravel-utilities",
  "type": "library",
  "description": "Package of reusable utilities for laravel applications used at JLab",
  "authors": [
    {
      "name": "Theo Larrieu",
      "email": "theo@jlab.org"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "php": "^8.1",
    "illuminate/support": "^10.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0",
    "orchestra/testbench": "8.*",
    "laravel/tinker":   "^2.0"
  },
  "autoload": {
    "psr-4": {
      "Jlab\\LaravelUtilities\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Jlab\\LaravelUtilities\\PackageServiceProvider"
      ]
    }
  }
}
